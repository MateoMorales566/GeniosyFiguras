@model List<GeniosyFiguras.Dtos.CursoDto>

@{
    ViewBag.Title = "IndexCurso";
    Layout = "~/Views/Compartido/Encabezado.cshtml";
}

<link href="~/Contenido/EstilosFondo.css" rel="stylesheet" />

<h2 class="titulo-pagina">Listado de tus cursos</h2>

<!-- Barra de búsqueda y botón nuevo curso -->
<form method="get" action="/Curso/IndexCurso" class="barra-busqueda">
    <input type="text" id="IdCurso" name="IdCurso" placeholder="ID del Curso" class="input-busqueda" />
    <input type="text" id="NombreCurso" name="NombreCurso" placeholder="Nombre del Curso" class="input-busqueda" />

    <button type="submit" class="btn-buscar">🔍 Buscar</button>
    <button type="button" class="btn-nuevo" onclick="location.href='/Curso/NuevoCurso'">➕ Nuevo Curso</button>
    <!-- Botón de retroceso -->
    <div class="contenedor-retroceso">
        <a href="/Profesor/IndexProfesor" class="btn-retroceso">⬅️ Volver a Profesores</a>

    </div>

</form>

<!-- Tabla de cursos -->
<table class="tabla-cursos">
    <thead>
        <tr>
            <th>ID Curso</th>
            <th>Nombre del Curso</th>
            <th>Número de Estudiantes</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curso in Model)
        {
            <tr>
                <td>@curso.IdCurso</td>
                <td>@curso.NombreCurso</td>
                <td>@curso.NumeroEstudiantes</td>
                <td>
                    <a href="@Url.Action("EditarCurso", "Curso", new { id = curso.IdCurso })" class="btn-accion editar" title="Editar">✏️</a>
                    <a href="@Url.Action("IndexEstudiante", "Estudiante", new { id = curso.IdCurso })" class="btn-accion estudiantes" title="Ver estudiantes">👥</a>
                    <a href="@Url.Action("EliminarCurso", "Curso", new { id = curso.IdCurso })" class="btn-accion eliminar" title="Eliminar" onclick="return confirm('¿Estás seguro de eliminar este curso?')">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="background-color: #b4e4fc; height: 100px; width: 100%;"></div>



