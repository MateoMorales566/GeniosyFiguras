
@{
    ViewBag.Title = "Panel Profesor";
}


 <link href="~/Content/MenuProfesor.css" rel="stylesheet" />

<div class="contenedor-principal">
    <div class="menu-lateral">
        <img src="~/Content/imagenes/j1.png" alt="Iglesia" class="logo-iglesia">

        <div class="opcion-menu">
            <span>Datos personales</span>
            <img src="~/Content/imagenes/flecha-abajo.png" alt="Flecha abajo" class="flecha">
        </div>

        <div class="opcion-menu" onclick="window.location.href='@Url.Action("IndexCurso", "Curso")'" >
            <span>Mis cursos </span>
            <img src="~/Content/imagenes/flecha-abajo.png" alt="Flecha abajo" class="flecha">
        </div>

        <div class="opcion-menu"
             <span>Atributos</span>
            <img src="~/Content/imagenes/flecha-abajo.png" alt="Flecha abajo" class="flecha">
        </div>

        <div class="opcion-menu">
            <span>Enemigos</span>
            <img src="~/Content/imagenes/flecha-abajo.png" alt="Flecha abajo" class="flecha">
        </div>

        <div class="icono-home">
            <img src="~/Content/imagenes/casa.png" alt="Inicio">
        </div>
    </div>

    <div class="contenido-principal">
        <div class="bienvenida">
            <h1>¡Bienvenido, profesor!</h1>
            <p>Aquí podrás crear cursos, agregar estudiantes, asignar atributos de poder y enfrentar nuevos desafíos.</p>
        </div>

        <div class="imagenes">
            <div class="bloque">
                <img src="~/Content/imagenes/Enemigo6.jpg" alt="Troll enemigo" class="imagen-principal">
                <img src="~/Content/imagenes/atri1.png" alt="Barras de vida" class="imagen-barra">
            </div>

            <div class="bloque">
                <img src="~/Content/imagenes/grupo_est.jpg" alt="Partida de rol" class="imagen-principal">
                <img src="~/Content/imagenes/atri1.png" alt="Barras de vida" class="imagen-barra">
            </div>
        </div>

        <button class="boton-cerrar-sesion">Cerrar sesión</button>
    </div>
</div>



