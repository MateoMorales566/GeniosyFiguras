@model GeniosyFiguras.Dtos.UsuarioDto
@using System.Web.Mvc
@{
    ViewBag.Title = "CrearUsuario";
    Layout = "~/Views/Compartido/Encabezado.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Contenido/EstilosRegistro.css" />

<h2>Registro de Usuario</h2>

<!-- Modal visible directamente -->
<div id="id01" class="modal" style="display:block;">
    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>

    @using (Html.BeginForm("CrearUsuario", "Usuario", FormMethod.Post, new { @class = "modal-content" }))
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <h1>Crear Cuenta</h1>
            <p>Por favor, llena el siguiente formulario.</p>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div style="margin-bottom: 20px;">
                <label for="Nombres"><b>Nombres</b></label>
                @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
            </div>

            <div style="margin-bottom: 20px;">
                <label for="Apellidos"><b>Apellidos</b></label>
                @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
            </div>

            <div style="margin-bottom: 20px;">
                <label for="Email"><b>Email</b></label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div style="margin-bottom: 20px;">
                <label for="Telefono"><b>Teléfono</b></label>
                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
            </div>

            <div style="margin-bottom: 20px;">
                <label for="NombreUsuario"><b>Nombre de Usuario</b></label>
                @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
            </div>

            <div style="margin-bottom: 20px;">
                <label for="Contraseña"><b>Contraseña</b></label>
                @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
            </div>

            <div style="margin-bottom: 20px;">
                <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:10px"> Recordarme
                </label>
            </div>

            <div class="clearfix">
                <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancelar</button>
                <button type="submit" class="signupbtn">Registrar</button>
            </div>
        </div>
    }
</div>

<!-- Script para cerrar el modal al hacer clic fuera de él -->
<script>
    var modal = document.getElementById('id01');
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>

<div>
    @Html.ActionLink("Volver", "Index")
</div>

